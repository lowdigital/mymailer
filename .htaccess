# MyMailer Security Rules

# Deny access to JSON configuration files
<FilesMatch "\.json$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Deny access to text files (logs, lists)
<FilesMatch "\.(txt|log)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Deny access to config.php
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>
